<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


        <TextView
            android:id="@+id/display_name"
            android:textColor="@color/lightblue"
            android:fontFamily="TimesNewRoman"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/details_display"
            android:layout_below="@+id/details_display"
            android:layout_alignRight="@+id/set_alarm"
            android:layout_alignEnd="@+id/set_alarm" />
        <TextView
            android:id="@+id/display_number"
            android:layout_gravity="center_horizontal"
            android:fontFamily="Arial"
            android:textColor="@color/lightblue"
            android:textSize="20sp"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/display_name"
            android:layout_alignRight="@+id/display_name"
            android:layout_alignEnd="@+id/display_name"
            android:layout_toEndOf="@+id/details_display"
            android:layout_toRightOf="@+id/details_display" />
        <TextView
            android:id="@+id/details_display"
            android:fontFamily="Arial"
            android:layout_height="30dp"
            android:layout_width="100dp"/>
        <Button
            style="@style/buttonStyle"
            android:id="@+id/set_alarm"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:text="@string/set_alarm"
            android:textSize="20dp"
            android:textColor="@color/red"
            android:layout_centerInParent="true"
            android:background="@drawable/btnalarmround_shape"
            android:layout_below="@+id/display_name"
            android:layout_marginTop="79dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_show"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="@string/show_button"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btnshow_shape"
                android:layout_weight="1"
                />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>